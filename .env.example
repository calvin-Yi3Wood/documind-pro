# ==========================================
# DocuMind Pro - 环境变量配置模板
# ==========================================

# ----- AI 服务配置 -----
# Google Gemini API Key (用于文档AI功能)
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API Key (备用AI服务)
DEEPSEEK_API_KEY=your_deepseek_api_key_here


# ----- 数据库配置 (Supabase) -----
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key


# ----- 认证配置 (NextAuth.js) -----
# NextAuth 密钥 (运行命令生成: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL (开发环境: http://localhost:3000)
NEXTAUTH_URL=http://localhost:3000

# OAuth 提供商 (可选)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret


# ----- 应用配置 -----
# 应用基础URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 应用环境
NODE_ENV=development


# ----- 文件存储配置 -----
# 文件上传限制 (MB)
MAX_FILE_SIZE=50

# 支持的文件类型
ALLOWED_FILE_TYPES=.pdf,.docx,.pptx,.xlsx,.md,.txt


# ----- 功能开关 -----
# 启用AI功能
NEXT_PUBLIC_ENABLE_AI=true

# 启用用户注册
NEXT_PUBLIC_ENABLE_SIGNUP=true

# 启用调试模式
NEXT_PUBLIC_DEBUG=false


# ----- 第三方服务 -----
# Sentry (错误追踪)
SENTRY_DSN=your_sentry_dsn_here

# PostHog (分析)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com


# ----- Redis 配置 (可选 - 用于缓存) -----
REDIS_URL=redis://localhost:6379
